<p id="notice"><%= notice %></p>

<h1>Listing Pets</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pets.each do |pet| %>
      <tr>
        <td><%= pet.name %></td>
          <!-- <td><%= image_tag pet.pet_pic.url(:thumb) %></td> -->

        <td><%= link_to pet do %>
            <%= image_tag pet.pet_pic.url(:thumb)  %>
          <% end %></td>
        <!-- <td><%= link_to 'Show', pet %></td> -->
        <td><%= link_to 'Edit', edit_pet_path(pet) %></td>
        <td><%= link_to 'Destroy', pet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

