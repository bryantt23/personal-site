<%= form_for @entry do |f| %>
	<% if @entry.errors.any? %>
		<h2><%= pluralize(@entry.errors.count, "error") %> prevented this entry from saving:</h2>
		<ul>
			<% @entry.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	<% end %>

	<%= f.label :title %><br>
	<%= f.text_field :title %>

	<br>
	<br>

	<%= f.label :body, "Write your article here" %><br>
	<%= f.text_area :body %>

	<br>
	<br>

	<%= f.submit %>

<% end %>
