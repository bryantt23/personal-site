<h1> Secret Identities </h2>

<% @posts.each do |post| %>
<!-- <div class="post_wrapper"> -->
	<!-- <%= image_tag post.avatar.url(:thumb) %> -->

	<%= link_to post do %>
	  <%= image_tag post.avatar.url(:thumb)  %>
	<% end %>


	<h3 class="name"><%= link_to post.name, post %> is...</h3>

	<% if user_signed_in? %>
	<h4 class="secret"><%=  post.secret %></h4>
	<% end %>

	<!-- <p class="date"><%= post.created_at.strftime("%B %d, %Y") %></p> -->
<!-- </div> -->
<% end %>

<br>

	<% if user_signed_in? %>
	<%= link_to 'Add A Secret Identity', new_post_path %>
	<%= link_to 'Sign Out', destroy_user_session_path, method: :delete %>
	<% end %>


		<% if !user_signed_in? %>
		<%= link_to 'Sign In', new_user_session_path %> or
		<%= link_to 'Sign Up', new_user_registration_path %> to see the Secret Identities
		<% end %>
