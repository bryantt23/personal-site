<p id="notice"><%= notice %></p>

<h1>Listing Flashcards</h1>

<table>
  <thead>
    <tr>
      <th>Question</th>
      <th>Answer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flashcards.each do |flashcard| %>
    <tr>
      <td><%= flashcard.question %></td>

      <td>
        <div class="accordion-flashcard">
          <h3>Answer</h3>
          <div>
            <%= flashcard.answer %>
          </div>
        </div>
      </td>
      <td><%= button_to "Edit", edit_flashcard_path(flashcard) , :class => "button" %></td>
      <td><%= button_to "Delete", flashcard, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to 'New Flashcard', new_flashcard_path %>
